extends layouts/default.pug

block content
    .d-flex.justify-content-center.align-items-center.flex-column.h-100

        .chat.row.justify-content-center
            .col-lg-5.col-md-7.col-sm-8.col-10
                .card.h-100.py-3
                    .card-body
                        form#form
                            .row.justify-content-center.align-items-center.h-100
                                .logo
                                    h1.title.text-center Entrar

                                .col-md-8.form-group.mb-2
                                    .row
                                        input(type="checkbox" checked)#identification.d-none

                                        .col-lg-6.col-md-6.col-sm-6.col-12
                                            label(for="identification" data-identify="true").identificationButton.active.text-white.text-center.btn Entrar com um nome
                                        .col-lg-6.col-md-6.col-sm-6.col-12
                                            label(for="identification" data-identify="false").identificationButton.text-white.text-center.btn Entrar sem um nome

                                .col-md-8.form-group.my-4
                                    input.form-control(type="text" placeholder='Digite seu nome, deixe vazio se quiser ser an√¥nimo...' name="name" autofocus)

                                .col-md-8.form-group.d-grid.text-center
                                    button.btn.btn-primary.btn-block(type='submit')
                                        span Entrar